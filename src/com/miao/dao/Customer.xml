<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myTest">
    <!--根据cust_id查询客户-->
    <!--mybatis #{cust_id} == '?' -->
    <select id="queryCustomerById" parameterType="integer" resultType="com.miao.dao.Customer">
	  SELECT * FROM `customer` WHERE cust_id  = #{cust_id}
	</select>

    <select id="queryCustomerAll" resultType="com.miao.dao.Customer">
        select * from customer
    </select>

    <!--模糊查询 SELECT * FROM customer WHERE cust_name LIKE '%李%'-->
     <!--${}不防止sql注入         select * from customer where cust_name like '%${value}%'-->
    <select id="queryCustomerLike" resultType="com.miao.dao.Customer" parameterType="string">

        select * from customer where cust_name like #{name}
    </select>


    <!--插入一个客户-->
    <insert id="insertCustomer" parameterType="com.miao.dao.Customer">

        /*  获取插入的最后一个id, order表示在执行insert操作之后执行selectkey里面的操作*/
        <selectKey keyColumn="cust_id" keyProperty="cust_id" resultType="Integer" order="AFTER">
            select last_insert_id();
        </selectKey>

        insert into `customer`(cust_name,cust_profession,cust_phone,email)
        values (#{cust_name},#{cust_profession},#{cust_phone},#{email})
    </insert>

    <!--更新操作-->
    <update id="updateCustomer" parameterType="com.miao.dao.Customer">
        update `customer` set cust_name=#{cust_name} where cust_id=#{cust_id}
    </update>

    <!--删除操作-->
    <delete id="deleteCustomer" parameterType="com.miao.dao.Customer">
        delete from `customer` where cust_id=#{cust_id}
    </delete>
</mapper>